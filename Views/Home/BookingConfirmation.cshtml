@model MovieBooking.Models.BookingDetails
@{
    ViewData["Title"] = "Booking Confirmation";
    var bookingDetails = ViewBag.BookingDetails as MovieBooking.Models.BookingDetails;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-check-circle"></i> Booking Confirmed!
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="confirmation-icon">
                            <i class="bi bi-ticket-perforated-fill"></i>
                        </div>
                        <h5 class="mt-3">Thank you for your booking!</h5>
                        <p class="text-muted">Your tickets have been booked successfully.</p>
                    </div>

                    <div class="booking-details">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="mb-3">Movie Details</h6>
                                <p><strong>Movie:</strong> @bookingDetails.MovieTitle</p>
                                <p><strong>Theater:</strong> @bookingDetails.TheaterName</p>
                                <p><strong>Date:</strong> @bookingDetails.Showtime.ToString("MMM dd, yyyy")</p>
                                <p><strong>Time:</strong> @bookingDetails.Showtime.ToString("hh:mm tt")</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="mb-3">Booking Details</h6>
                                <p><strong>Seats:</strong> @string.Join(", ", bookingDetails.Seats)</p>
                                <p><strong>Number of Tickets:</strong> @bookingDetails.Seats.Count</p>
                                <p><strong>Total Amount:</strong> $@bookingDetails.TotalAmount</p>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="text-center mt-4">
                        <p class="text-muted mb-4">
                            A confirmation email has been sent to your registered email address.
                            Please show this confirmation at the theater counter to collect your tickets.
                        </p>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="@Url.Action("Index")" class="btn btn-primary me-md-2">
                                <i class="bi bi-house"></i> Back to Home
                            </a>
                            <button onclick="window.print()" class="btn btn-outline-primary">
                                <i class="bi bi-printer"></i> Print Ticket
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .confirmation-icon {
        font-size: 4rem;
        color: #28a745;
        margin-bottom: 1rem;
    }

    .booking-details {
        background-color: #f8f9fa;
        padding: 2rem;
        border-radius: 0.5rem;
    }

    @@media print {
        .navbar, .footer, .btn {
            display: none !important;
        }
        
        .card {
            border: none !important;
            box-shadow: none !important;
        }
        
        .booking-details {
            background-color: transparent !important;
        }
    }
</style> 