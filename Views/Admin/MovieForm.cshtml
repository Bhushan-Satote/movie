@model MovieBooking.Models.Movie

@{
    ViewData["Title"] = ViewData["Action"] + " Movie";
}

<div class="container-fluid mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header-gradient py-3">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-film me-2"></i>
                        @ViewData["Action"] Movie
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post" action="@(ViewData["Action"].ToString() == "Add" ? Url.Action("AddMovie") : Url.Action("EditMovie"))" 
                          class="needs-validation" novalidate>
                        @if (Model != null && Model.Id > 0)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="card shadow-sm mb-4">
                                    <div class="card-body">
                                        <h5 class="text-primary mb-4">Basic Information</h5>
                                        
                                        <div class="mb-3">
                                            <label asp-for="Title" class="form-label">
                                                <i class="bi bi-film"></i> Movie Title
                                            </label>
                                            <input asp-for="Title" class="form-control" required maxlength="100" 
                                                   placeholder="Enter movie title" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="Genre" class="form-label">
                                                <i class="bi bi-tags"></i> Genre
                                            </label>
                                            <select asp-for="Genre" class="form-select select-custom" required>
                                                <option value="">Select Genre</option>
                                                <option value="Action">Action</option>
                                                <option value="Drama">Drama</option>
                                                <option value="Comedy">Comedy</option>
                                                <option value="Sci-Fi">Sci-Fi</option>
                                                <option value="Horror">Horror</option>
                                                <option value="Romance">Romance</option>
                                                <option value="Thriller">Thriller</option>
                                                <option value="Adventure">Adventure</option>
                                            </select>
                                            <span asp-validation-for="Genre" class="text-danger"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Duration" class="form-label">
                                                        <i class="bi bi-clock"></i> Duration (minutes)
                                                    </label>
                                                    <input asp-for="Duration" type="number" class="form-control" required min="1" 
                                                           placeholder="Enter duration" />
                                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Price" class="form-label">
                                                        <i class="bi bi-currency-dollar"></i> Price
                                                    </label>
                                                    <input asp-for="Price" type="number" step="0.01" class="form-control" required min="0" 
                                                           placeholder="Enter price" />
                                                    <span asp-validation-for="Price" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="Language" class="form-label">
                                                <i class="bi bi-translate"></i> Language
                                            </label>
                                            <input asp-for="Language" class="form-control" required 
                                                   placeholder="Enter language" />
                                            <span asp-validation-for="Language" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="card shadow-sm mb-4">
                                    <div class="card-body">
                                        <h5 class="text-primary mb-4">Movie Details</h5>

                                        <div class="mb-3">
                                            <label asp-for="Description" class="form-label">
                                                <i class="bi bi-card-text"></i> Description
                                            </label>
                                            <textarea asp-for="Description" class="form-control" rows="4" required 
                                                      placeholder="Enter movie description"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="Rating" class="form-label">
                                                        <i class="bi bi-star"></i> Rating (0-10)
                                                    </label>
                                                    <input asp-for="Rating" type="number" step="0.1" class="form-control" required min="0" max="10" 
                                                           placeholder="Enter rating" />
                                                    <div class="text-warning mt-2 star-rating">
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                        <i class="bi bi-star-fill"></i>
                                                    </div>
                                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label asp-for="ReleaseDate" class="form-label">
                                                        <i class="bi bi-calendar"></i> Release Date
                                                    </label>
                                                    <input asp-for="ReleaseDate" type="date" class="form-control" required />
                                                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card shadow-sm mb-4">
                                    <div class="card-body">
                                        <h5 class="text-primary mb-4">Cast & Crew</h5>

                                        <div class="mb-3">
                                            <label asp-for="Director" class="form-label">
                                                <i class="bi bi-person"></i> Director
                                            </label>
                                            <input asp-for="Director" class="form-control" required 
                                                   placeholder="Enter director name" />
                                            <span asp-validation-for="Director" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="Cast" class="form-label">
                                                <i class="bi bi-people"></i> Cast
                                            </label>
                                            <textarea asp-for="Cast" class="form-control" rows="3" required 
                                                      placeholder="Enter cast members (comma separated)"></textarea>
                                            <span asp-validation-for="Cast" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="card shadow-sm mb-4">
                                    <div class="card-body">
                                        <h5 class="text-primary mb-4">Movie Poster</h5>

                                        <div class="mb-3">
                                            <label asp-for="PosterURL" class="form-label">
                                                <i class="bi bi-image"></i> Poster URL
                                            </label>
                                            <div class="input-group">
                                                <input asp-for="PosterURL" type="url" class="form-control" 
                                                       placeholder="https://example.com/poster.jpg" />
                                                <button class="btn btn-outline-primary" type="button" onclick="previewImage()">
                                                    <i class="bi bi-eye"></i> Preview
                                                </button>
                                            </div>
                                            <span asp-validation-for="PosterURL" class="text-danger"></span>
                                        </div>

                                        <div id="posterPreview" class="image-preview-container text-center mb-3" style="display: none;">
                                            <img src="" alt="Poster Preview" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
                                        </div>

                                        <div class="mb-4">
                                            <div class="form-check form-switch">
                                                <input asp-for="IsNowShowing" class="form-check-input" type="checkbox" role="switch" />
                                                <label asp-for="IsNowShowing" class="form-check-label">
                                                    <i class="bi bi-play-circle"></i> Now Showing
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a href="@Url.Action("Movies")" class="btn btn-light btn-lg">
                                <i class="bi bi-x-circle me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-gradient btn-lg">
                                <i class="bi bi-save me-2"></i> @ViewData["Action"] Movie
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Enable Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        // Dynamic star rating preview
        const ratingInput = document.getElementById('Rating');
        const starRating = document.querySelector('.star-rating');
        
        ratingInput.addEventListener('input', function() {
            const rating = parseFloat(this.value);
            const stars = starRating.querySelectorAll('i');
            
            stars.forEach((star, index) => {
                if (index < Math.floor(rating / 2)) {
                    star.className = 'bi bi-star-fill';
                } else if (index === Math.floor(rating / 2) && rating % 2 !== 0) {
                    star.className = 'bi bi-star-half';
                } else {
                    star.className = 'bi bi-star';
                }
            });
        });

        // Enhanced poster preview functionality
        function previewImage() {
            const url = document.getElementById('PosterURL').value;
            const preview = document.getElementById('posterPreview');
            const img = preview.querySelector('img');
            
            if (url) {
                preview.style.display = 'block';
                img.src = url;
                img.onerror = function() {
                    preview.style.display = 'none';
                    showToast('Unable to load image. Please check the URL.', 'danger');
                };
            } else {
                preview.style.display = 'none';
            }
        }

        // Toast notification
        function showToast(message, type) {
            const toastContainer = document.createElement('div');
            toastContainer.style.position = 'fixed';
            toastContainer.style.top = '20px';
            toastContainer.style.right = '20px';
            toastContainer.style.zIndex = '1050';
            
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type} border-0`;
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            
            toastContainer.appendChild(toast);
            document.body.appendChild(toastContainer);
            
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', function () {
                toastContainer.remove();
            });
        }

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
} 